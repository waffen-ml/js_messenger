extends index

block main
    ul(style="list-style-type:none;padding:0;")
        each user in users 
            li
                a.button.light(href="/user?id=" + user.id, style="color:black;text-decoration:none;display:flex;align-items:center;gap:10px;width:max-content;min-width:120px;") 
                    img.avatar(src="/getuseravatar?id=" + user.id, style="height:45px;")
                    span.name= user.name 