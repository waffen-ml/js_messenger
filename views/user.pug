extends index 

include units

append header
    style 
        include css/content.css

append body 
    script 
        include js/user.js

block main
    p1.page-header= `Пользователь ${target.name}`
    img.avatar(style="display:block;height:100px;margin-top:10px;margin-bottom:20px;border-radius:50%" src='/file?id=' + target.avatar_id)
    
    if user && target.id == user.id 
        a.button.set-avatar(style="display:block;margin-bottom:10px;width:max-content") Назначить аватарку
    
    .user-info
        span.tag= '@' + target.tag
        a.button(href="/direct?with=" + target.id) Сообщение 
    .feed(style="margin-top:10px;")
