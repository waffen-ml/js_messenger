extends index

block main
    ul(style="list-style-type:none;padding:0;")
        each chat in chats
            li
                a.button.light(href="/chat?id=" + chat.id, style="color:black;text-decoration:none;display:flex;align-items:center;gap:10px;width:max-content;min-width:120px;max-width:100%;") 
                    img.avatar(src="/getchatavatar?id=" + chat.id, style="height:45px;")
                    span.name.finite= clientUtils.getChatName(chat, observer) 