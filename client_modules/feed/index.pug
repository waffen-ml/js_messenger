
append header
    style 
        include style.css 

append body
    script 
        include script.js
    script(type="text/x-ejs-template", template="post-reactions")
        ul.styled-scroll(style="margin:0;overflow-y:auto;max-height:500px; width:max-content;list-style-type:none;padding:0;align-items:center;gap:40px;")
            <% reactions.forEach(r => { %>
            li(style="display:flex;width:100%;justify-content:space-between;")
                a.button.light.user(href!="/user?id=<%=r.user_id%>", style="display:flex;gap:8px;align-items:center")
                    img.avatar(src!="/getuseravatar?id=<%=r.user_id%>", style="height:30px")
                    span.name <%= r.user_name %>
                span.reaction <%= r.type == 1? 'ðŸ‘' : 'ðŸ‘Ž' %>
            <% }) %>
