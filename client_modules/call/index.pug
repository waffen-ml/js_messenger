append header 
    style
        include style.css

append body 
    .call-interface.hidden 
        .main-bar.block
            a.button.light.chat-info
                img.avatar.chat-avatar(src="/public/chatavatar/0.png")
                span.finite.chat-name
                span.member-count 1 участник
            button.button.toggle-list 🧑
            button.button.toggle-muted 🔊
            button.button.leave 🚪
            button.button.toggle-interface 📞
        .block.styled-scroll.member-list

    script(type="text/x-ejs-template", template="call-member")
        .member(id!="call-member-<%=id%>")
            a.avatar-wrapper(href!="/user?id=<%=id%>")
                img.avatar(src!="/getuseravatar?id=<%=id%>")
            a.finite.button.light.member-name(href!="/user?id=<%=id%>") <%=name%>
            .volume
                input(type="range", min="0", max="100", value="100", step="1")
                span.perc 100%
            button.button.light.toggle-muted 🔊
    
    script 
        include script.js